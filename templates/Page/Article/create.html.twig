{% extends 'Layout/Showcase/base.html.twig' %}

{% block sub_title %}
    {% trans from 'title' %}article.create{% endtrans %}
{% endblock sub_title %}

{% block body %}

{% embed 'Widget/Card/flat.html.twig' %}

{% block body %}
{{ form_start(form, {'attr': {'class': 'space-y-8 divide-y divide-gray-200'}}) }}
  <div class="space-y-8 divide-y divide-gray-200 sm:space-y-5">
    <div>
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          {% trans from 'message' %}articles.creation.title{% endtrans %}
        </h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">
          {% trans from 'message' %}articles.creation.sub_text{% endtrans %}
        </p>
      </div>

      <div class="mt-6 sm:mt-5 space-y-6 sm:space-y-5">

        <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
          {{ form_label(form.title, 'article.creation.title'|trans({}, 'label'), {'label_attr': {'class': 'block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2'}}) }}
          <div class="mt-1 sm:mt-0 sm:col-span-2">
            <div class="max-w-lg flex rounded-md shadow-sm">
              {{ form_widget(form.title, {'attr': {'class': 'flex-1 block w-full rounded focus:ring-indigo-500 focus:border-indigo-500 min-w-0 rounded-none rounded-r-md sm:text-sm border-gray-300'}}) }}
            </div>
          </div>
        </div>

        <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
          {{ form_label(form.summary, 'article.creation.summary', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2'}}) }}
          <div class="mt-1 sm:mt-0 sm:col-span-2">
            <div class="max-w-lg flex rounded-md shadow-sm">
              {{ form_widget(form.summary, {'attr': {'class': 'flex-1 block w-full rounded focus:ring-indigo-500 focus:border-indigo-500 min-w-0 rounded-none rounded-r-md sm:text-sm border-gray-300'}}) }}
            </div>
          </div>
        </div>

        <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
          {{ form_label(form.preview, 'article.creation.preview', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2'}}) }}
          <div class="mt-1 sm:mt-0 sm:col-span-2">
            <div class="max-w-lg flex rounded-md shadow-sm">
              {{ form_widget(form.preview) }}
            </div>
          </div>
        </div>

        <div class="sm:grid sm:grid-cols-3 sm:gap-4 sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
          {{ form_label(form.slug, 'article.creation.slug'|trans({}, 'label'), {'label_attr': {'class': 'block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2'}}) }}
          <div class="mt-1 sm:mt-0 sm:col-span-2">
            <div class="max-w-lg flex rounded-md shadow-sm">
              <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 sm:text-sm">
                {{ absolute_url(path('app_article_list')) }}
              </span>
              {{ form_widget(form.slug, {'attr': {'class': 'flex-1 block w-full focus:ring-indigo-500 focus:border-indigo-500 min-w-0 rounded-none sm:text-sm border-gray-300'}}) }}
              <span class="inline-flex items-center px-3 rounded-r-md border border-l-0 border-gray-300 bg-gray-50 text-gray-500 sm:text-sm">
                /show
              </span>
            </div>
          </div>
        </div>

        <div class="sm:grid sm:items-start sm:border-t sm:border-gray-200 sm:pt-5">
          {{ form_widget(form.content, {'attr': {'class': 'border-2 border-gray-200'}})}}
        </div>

      </div>
    </div>
  </div>

  <div class="pt-5">
    <div class="flex justify-end">
      <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        {{ 'save & publish'|trans({}, 'action') }}
      </button>
    </div>
  </div>
{{ form_end(form) }}
{% endblock body %}
{% endembed %}

{% endblock body %}