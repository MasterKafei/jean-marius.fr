{% extends 'Layout/Showcase/base.html.twig' %}

{% block sub_title %}
    {% trans from 'title' %}
        contact.list
    {% endtrans %}
{% endblock sub_title %}

{% block body %}
<div class="flex flex-col">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                {% trans from 'label' %}contact.list.name{% endtrans %}
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                {% trans from 'label' %}contact.list.subject{% endtrans %}
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                {% trans from 'label' %}contact.list.email{% endtrans %}
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                {% trans from 'label' %}contact.list.name{% endtrans %}
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                {% trans from 'label' %}contact.list.creation_date{% endtrans %}
              </th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only">{% trans from 'label' %}contact.list.action{% endtrans %}</span>
              </th>
            </tr>
          </thead>
          <tbody>
            {% for message in messages %}
                <tr class="{{ loop.index % 2 == 0 ? 'bg-white' : 'bg-gray-100'}}">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        {{ message.firstName }} {{ message.lastName }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {{ message.subject }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {{ message.email }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {{ (message.viewedDate is not null ? 'contact.list.read' : 'contact.list.not_read')|trans({}, 'label') }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {{ message.creationDate|date('date-format'|trans({}, 'setting')) }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <a href="{{ path('app_contact_show', {'id': message.id}) }}" class="text-indigo-600 hover:text-indigo-900">
                            {% trans from 'label' %}
                                contact.list.show
                            {% endtrans %}
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-500">
                        {% trans from 'label' %}
                            contact.list.no_message
                        {% endtrans %}
                    </td>
                </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
{% endblock body %}